# ==================== SERVER CONFIGURATION ====================
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# ==================== API CONFIGURATION ====================
API_URL=https://api.sansekai.my.id/api/melolo
API_KEY_REQUIRED=false
API_KEY=your-api-key-here

# ==================== SECURITY ====================
SESSION_SECRET=your-session-secret-key-here
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# ==================== CACHE & DATABASE ====================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
CACHE_DURATION=300000
STREAM_CACHE_DURATION=1800000

# ==================== RATE LIMITING ====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
STREAM_RATE_LIMIT_MAX_REQUESTS=50

# ==================== CORS ====================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://dramachina.com

# ==================== MONITORING ====================
GA_ID=UA-XXXXXXXXX-X
SENTRY_DSN=your-sentry-dsn-here

# ==================== LOGGING ====================
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log

# ==================== CDN & STATIC FILES ====================
CDN_URL=https://cdn.dramachina.com
UPLOAD_MAX_SIZE=10485760

# ==================== FEATURE FLAGS ====================
ENABLE_REGISTRATION=true
ENABLE_COMMENTS=true
ENABLE_DOWNLOADS=false
ENABLE_ADS=false
